<h1>Bienvenido a BD-CHAN</h1>

<%= link_to "Crea una nueva seccion", new_section_path %>

<table border="1">
  <thead>
    <tr>
      <th>Secciones</th>
      <th>Fecha Creacion</th>
    </tr>
  </thead>
  <tbody>
    <% @sections.each do |sec| %>
      <tr>
        <td><%= link_to sec.name, sec %></td>
        <td><%= sec.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>